<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="M-HIKE"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/Shade_green"


        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikeNameId2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Hike Name"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/locationNameId2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Location"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/hikeDateId2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Date of hike"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>
        <Button
            android:id="@+id/pickDate2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pick Date"
            android:background="@color/Shade_green"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Parking available?"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_weight="1"

            />


        <RadioGroup
            android:id="@+id/parkingR_GroupId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/yesRadioId2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Yes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:onClick="parkOption2"
                android:checked="true"/>

            <TextView
                android:id="@+id/parkOptionId2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="yes"
                android:textAlignment="center"
                android:textSize="15dp" />
            <RadioButton
                android:id="@+id/noRadioId2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="No"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:onClick="parkOption2"
                />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikeLengthId2"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Length of hike"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikeDifficultyId2"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Difficulty level of hike"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikeDescId2"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Description"
            android:textAlignment="center"
            android:textSize="25dp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikePeopleId2"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Number of people"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/hikeWeatherId2"
            android:layout_marginTop="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Weather Condition"
            android:textAlignment="center"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        >



        <Button
            android:id="@+id/backBtnId"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@color/Shade_green"
            android:text="Back"
            android:textAlignment="center"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/updateHikebtnId"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/Shade_green"
            android:text="Update"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/deleteHikebtnId"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/Shade_green"
            android:text="Delete"
            android:textAlignment="center"
            android:textSize="20sp"
            />


    </LinearLayout>



</LinearLayout>